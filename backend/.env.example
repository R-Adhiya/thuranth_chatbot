# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=pdcp

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Firebase Configuration (for notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Blockchain Configuration
BLOCKCHAIN_NETWORK_PATH=../blockchain/network
BLOCKCHAIN_CHANNEL_NAME=pdcp-channel
BLOCKCHAIN_CHAINCODE_NAME=parcel-custody
BLOCKCHAIN_MSP_ID=PDCPMSP
BLOCKCHAIN_PEER_ENDPOINT=grpc://localhost:7051

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Shadow Mode (set to true for pilot phase)
SHADOW_MODE=true

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PORT=3002

# Trust Score Configuration
MIN_TRUST_SCORE_2W=80
MIN_TRUST_SCORE_4W=70
TRUST_SCORE_UPDATE_INTERVAL=3600000

# SLA Configuration
DEFAULT_SLA_BUFFER_2W=15
DEFAULT_SLA_BUFFER_4W=30

# Consolidation Constraints
MAX_DEVIATION_KM_2W=3
MAX_DEVIATION_KM_4W=8
MAX_DEVIATION_MINUTES_2W=20
MAX_DEVIATION_MINUTES_4W=45